<%= form_for @book do |f| %>
  <p>
    <%= f.label :title, "Title" %>
    <%= f.text_field :title, :autofocus => true %>
  </p>

  <p>
    <%= f.label :year %>
    <%= f.text_field :year %>
  </p>

  <p>
    <%= f.label :page %>
    <%= f.text_field :page %>
  </p>

  <p>
    <%= f.label :genre %>
    <%= f.text_field :genre %>
  </p>

  <p>
    <%= f.label :isbn %>
    <%= f.text_field :isbn %>
  </p>

  <p>
    <%= f.label :image %>
    <%= f.url_field :image %>
  </p>

  <p>
    <%= f.label :author_id %>
    <%= f.select :author_id, Author.all.map{|author|[author.name, author.id]}, :include_blank => true %>
  </p>
  <div class="form_s">
    <%= f.submit %>
  </div>
  <% end %>


